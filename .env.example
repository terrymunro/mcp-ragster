# --- Voyage AI Configuration ---
VOYAGEAI_API_KEY=""
VOYAGEAI_MODEL_NAME="voyage-3-large"
VOYAGEAI_EMBEDDING_API_URL="https://api.voyageai.com/v1/embeddings"
VOYAGEAI_INPUT_TYPE_DOCUMENT="document"
VOYAGEAI_INPUT_TYPE_QUERY="query"

# --- Embedding Dimension ---
# This value MUST match the output dimension of the selected Voyage AI model.
# For known models, config.py will try to use the correct dimension.
# Set this to your model's dimension if it's not in config.py's known list.
# Example: 1024 for voyage-2.
EMBEDDING_DIMENSION=2048

# --- Milvus Connection ---
MILVUS_ALIAS="default"
MILVUS_HOST="localhost"
MILVUS_PORT="19530"
MILVUS_USER=""         # Optional: Milvus username if RBAC is enabled
MILVUS_PASSWORD=""     # Optional: Milvus password if RBAC is enabled
MILVUS_USE_SSL="False" # Set to True if Milvus uses SSL
MILVUS_SERVER_PEM_PATH=""
MILVUS_SERVER_NAME=""
MILVUS_CA_CERT_PATH=""
MILVUS_CLIENT_KEY_PATH=""
MILVUS_CLIENT_PEM_PATH=""

# --- Firecrawl ---
# One of these must be set.
FIRECRAWL_API_URL="http://localhost:3002" # For self-hosted
FIRECRAWL_API_KEY=""                      # For Firecrawl cloud service

# --- Perplexity AI ---
PERPLEXITY_API_KEY=""

# --- Jina AI ---
JINA_API_KEY=""

# --- Milvus Collection Details ---
MILVUS_COLLECTION_NAME="topic_context_store"
MILVUS_INDEX_FIELD_NAME="embedding"
# MILVUS_VECTOR_DIMENSION is automatically set by config.py to match EMBEDDING_DIMENSION
MILVUS_ID_FIELD_NAME="id"
MILVUS_TEXT_FIELD_NAME="text_content"
MILVUS_TOPIC_FIELD_NAME="topic"
MILVUS_SOURCE_TYPE_FIELD_NAME="source_type"
MILVUS_SOURCE_IDENTIFIER_FIELD_NAME="source_identifier"
MILVUS_METRIC_TYPE="IP"  # Recommended for Voyage AI: IP (Inner Product/Cosine Similarity)
MILVUS_INDEX_TYPE="HNSW" # Recommended for IP metric.

# Milvus Index Parameters
MILVUS_HNSW_M=16                # HNSW M parameter (higher M means more accurate but slower builds/larger index)
MILVUS_HNSW_EF_CONSTRUCTION=200 # HNSW efConstruction (affects build time and index quality)
MILVUS_IVF_NLIST=1024           # nlist for IVF_FLAT (if used)

# Milvus Search Parameters
MILVUS_SEARCH_EF=64     # ef for HNSW search (higher means more accurate but slower search)
MILVUS_SEARCH_EF_EXPLORATION=128     # efExploration for HNSW search (higher improves recall but slower)
MILVUS_SEARCH_NPROBE=10 # nprobe for IVF_FLAT search (if used)

# --- Search parameters ---
MILVUS_SEARCH_LIMIT=5
JINA_SEARCH_LIMIT=5

# --- Concurrency Settings ---
MAX_CONCURRENT_FIRECRAWL=3    # Maximum number of concurrent Firecrawl tasks

# --- Caching Settings ---
JINA_CACHE_TTL_HOURS=3    # Hours to keep Jina cache entries
EMBEDDING_CACHE_SIZE=1000    # Maximum number of embeddings stored in cache
ENABLE_INDEX_WARMUP="True"   # Warm the Milvus index on startup
